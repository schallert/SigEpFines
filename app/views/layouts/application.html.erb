<!DOCTYPE html>
<html>
<head>
  <title>SigepFines</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
  <div class="ten columns">
    <h1 class="header">Sigep Fines</h1>
  </div>

  <% if user_signed_in? %>
    <div class="six columns omega header user-info">
      Signed in as <%= current_user.email %> <br>
      <a href="<%= destroy_user_session_path %>">Logout</a>
    </div>
  <% end %>
  
  <hr />

  <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "alert alert-#{key}") %>
  <% end %>
    
  <%= yield %>

  <div class="sixteen columns debug">
    <%= debug(params) if Rails.env.development? %>
  </div>
</div>

</body>
</html>
